# Flask Configuration
# Umgebung: development, production, testing
FLASK_ENV=development

# Debug-Modus aktivieren (nur für Entwicklung!)
FLASK_DEBUG=True

# Server-Host (0.0.0.0 für alle Netzwerkschnittstellen, 127.0.0.1 nur lokal)
FLASK_HOST=0.0.0.0

# Server-Port
FLASK_PORT=5000

# Database Configuration
# SQLite-Datenbankpfad (relativ oder absolut)
DATABASE_URL=sqlite:///data/data.db

# Für PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@localhost:5432/fhir_db

# Für MySQL (optional):
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/fhir_db

# CORS (Cross-Origin Resource Sharing)
# Erlaubte Origins (kommasepariert oder * für alle)
CORS_ORIGINS=*

# Für spezifische Domains:
# CORS_ORIGINS=http://localhost:3000,https://app.example.com

# Logging
# Log-Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log-Datei (optional, wenn nicht gesetzt wird nur in Console geloggt)
# LOG_FILE=logs/app.log

# Security (für Produktion)
# Secret Key für Flask Sessions (generieren mit: python -c "import secrets; print(secrets.token_hex(32))")
# SECRET_KEY=your-secret-key-here

# FHIR Configuration
# FHIR Server URL (optional, falls externes FHIR-Repository verwendet wird)
# FHIR_SERVER_URL=https://hapi.fhir.org/baseR4

# API Configuration
# API-Schlüssel für externe Services (optional)
# API_KEY=your-api-key-here

# Rate Limiting (optional)
# RATELIMIT_ENABLED=True
# RATELIMIT_DEFAULT=100 per hour

# Datenbankbereinigung (optional)
# Automatisches Löschen alter Bundles nach X Tagen
# DB_CLEANUP_DAYS=30
